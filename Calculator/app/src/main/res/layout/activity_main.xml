<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="50sp"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:backgroundTint= "#000000"
            android:id="@+id/result_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="AC"
                android:textSize="30sp"
                android:layout_weight="25"
                android:layout_margin="5dp"
                android:id ="@+id/all_clear_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CE"
                android:textSize="30sp"
                android:layout_weight="25"
                android:layout_margin="5dp"
                android:id ="@+id/clear_entry_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="BS"
                android:textSize="30sp"
                android:layout_weight="25"
                android:layout_margin="5dp"
                android:id ="@+id/back_space_button"/>

            <Button
                android:id="@+id/division_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:backgroundTint="#FF3030"
                android:text="/"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"

            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:id ="@+id/num_7_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:layout_weight="25"
                android:id ="@+id/num_8_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:id ="@+id/num_9_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="X"
                android:textSize="30sp"
                android:layout_weight="25"
                android:layout_margin="5dp"
                android:backgroundTint="#FF3030"
                android:id ="@+id/num_x_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30sp"
                android:layout_weight="25"
                android:layout_margin="5dp"
                android:id ="@+id/num_4_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30sp"
                android:layout_weight="25"
                android:layout_margin="5dp"
                android:id ="@+id/num_5_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30sp"
                android:layout_weight="25"
                android:layout_margin="5dp"
                android:id ="@+id/num_6_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30sp"
                android:layout_weight="25"
                android:layout_margin="5dp"
                android:backgroundTint="#FF3030"
                android:id ="@+id/num_minus_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:padding="4dp"
                android:id ="@+id/num_1_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:id ="@+id/num_2_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:id ="@+id/num_3_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:backgroundTint="#FF3030"
                android:id ="@+id/num_plus_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="30sp"
                android:layout_weight="50"
                android:layout_margin="5dp"
                android:padding="4dp"
                android:id ="@+id/num_0_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:id ="@+id/num_dot_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:layout_weight="25"
                android:backgroundTint="#FF3030"
                android:id ="@+id/num_equal_button"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
